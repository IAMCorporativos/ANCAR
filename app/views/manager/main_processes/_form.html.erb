<%= form_for [:manager, @main_process] do |f| %>

  <%= render 'manager/shared/errors', resource: @main_process %>
  <br>
  <div class="small-4 column">
      <%= f.hidden_field :period_id, value: @period.id ,label: false, placeholder: t("manager.main_processes.form.period") %>
  </div>
  <div class="small-4 column">
      <%= f.label :item_id, t("manager.main_processes.form.item") %>
      <%= f.select :item_id, options_for_select(main_process_items), label: false, placeholder: t("manager.main_processes.form.item") %>
  </div>
  <div class="small-12 column" ></div>
  <div class="small-2 column">
      <%= f.label :order, t("manager.main_processes.form.order") %>
      <%= f.select :order, options_for_select(1..25), label: false, placeholder: t("manager.main_processes.form.order") %>
    </div>

    <div class="actions small-12 column">
      <%= f.submit(class: "button tiny hollow", value: t("manager.actions.#{action_name}")) %>
    </div>
  </div>

<% end %>
