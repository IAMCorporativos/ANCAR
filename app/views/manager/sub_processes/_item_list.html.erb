<div>
 <h3> <%= @organization_type.description %> / <%= @period.description %>aqui</h3>
</div>

<table>
  <% @sub_processes.each do  |sub_process|%>
    <tr id="<%= dom_id(sub_process) %>">
      <td>
        <div class="admin-list small-12 medium-14 column">
          <%= description(0, sub_process.item_id) %>
        </div>
      </td>
      <td>
        <%= link_to manager_tasks_path(commit: t("manager.tasks.index.submit"),
            main_process_id: sub_process.main_process_id,
            sub_process_id: sub_process.id),
            class: 'button small float-right hollow' do %>
              <span class="icon-tag"></span>
              <%= t("manager.sub_processes.index.tasks") %>
        <% end %>
      </td>
      <td>
        <%= link_to edit_manager_sub_process_path(sub_process, period_id: params[:period_id], organization_type_id: params[:organization_type_id]),
            class: 'button small float-right hollow' do %>
              <span class="icon-edit"></span>
              <%= t("actions.edit") %>
            <% end %>
      </td>
      <td>
        <%= link_to manager_sub_process_path(sub_process), method: :delete,
                class: 'button small alert float-right hollow' do %>
              <span class="icon-box"></span>
              <%= t("actions.delete") %>
         <% end %>
      </td>
    </tr>
  <% end %>
</table>
