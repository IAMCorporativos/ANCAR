<div>
  <div class="expanded highlight padding">
     <h4><%= @organization_type.description %> / <%= @period.description %></h4>
     <h5><%= @main_process.order %>. <%= @main_process.item.description %> </h5>
     <h5><%= @sub_process.order %>. <%= @sub_process.item.description %></h5>
  </div>
</div>

<table>
  <tr>
    <th colrow="2">Indicador</th>
    <th colrow="2">MÃ©trica</th>
    <th colrow="2">Fuente</th>
    <th colspan="<%=@summary_types.count%>">Totalizadores</th>
  </tr>
  <tr>
     <td colspan="3"></td>
     <% @summary_types.each do |summary_type|%>
        <td><%= summary_type.description %></td>
      <% end %>
  </tr>

  <% @indicators.each do  |indicator|%>
    <tr id="<%= dom_id(indicator) %>">
      <td>
        <%= indicator.order %>. <%= indicator.item.description %>
      </td>
      <td id="<%= dom_id(indicator.indicator_metrics.first) %>">
        <%= indicator.indicator_metrics.first.metric.item.description %>
      </td>
      <td id="<%= dom_id(indicator.indicator_sources.first) %>">
        <%= indicator.indicator_sources.first.source.item.description %>
      </td>
      <% @summary_types.each do |summary_type|%>
        <td class="text-center"><%= total_check(indicator.indicator_metrics.take.id, summary_type) %></td>
      <% end %>
      <td>
        <%= link_to edit_manager_indicator_path(indicator),
            class: 'button warning float-right tiny hollow' do %>
              <span class="icon-edit"></span>
              <%= t("actions.edit") %>
        <% end %>
      </td>
      <td>
        <%= link_to manager_in_works_path(indicator),
            class: 'button alert float-right tiny hollow' do %>
              <span class="icon-delete"></span>
              <%= t("actions.delete") %>
         <% end %>
      </td>
    </tr>
  <% end %>
</table>
