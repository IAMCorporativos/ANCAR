<div class="row">
  <div class="small-12 columns">
    <h3 title="<%= "#{@unit.organization.id}" %>" class="text-center">
      <%= "#{@unit.organization.description}"%>
    </h3>
    <h4 title="<%= "#{@period.id}" %>" class="text-center">
      <%= "#{@period.description}"%>
    </h4>
  </div>
</div>

<div class="row">
  <div class="small-12 columns ">
    <br>
    <table class="unit-status-show">
      <caption title="<%= "#{@unit.id}" %>">
        <h5 class="text-left" > <%= "#{@unit.description_sap}"%></h5>
      </caption>
      <tr>
        <th class="hide-to-print"></th>
        <th class="text-left"><%= t('supervisor.unit_statuses.show.validation') %> </th>
        <td class="text-left"> <%= render 'validation' %> </td>
      </tr>
      <tr>
        <th class="hide-to-print"></th>
        <th class="text-left"><%= t('supervisor.unit_statuses.show.change') %> </th>
        <td>
          <%= render 'employees_change',
                     change: @supervisor_unit_status[:employees_change_id],
                     period: @supervisor_unit_statuses.period,
                     organization_description:
                         @supervisor_unit_status[:organization_description],
                     unit_id: @supervisor_unit_status[:unit_id] %>
        </td>
      </tr>
      <tr>
        <th class="hide-to-print"></th>
        <th class="text-left"><%= t('supervisor.unit_statuses.show.ok') %> </th>
        <td  class="text-left"> <%= render 'approval' %> </td>
      </tr>
    </table>
  </div>
</div>
