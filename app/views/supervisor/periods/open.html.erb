<%= render partial: 'supervisor/shared/header',
           locals: {title: t("supervisor.periods.#{action_name}.title"),
                    button: nil, path: nil, modifiable: true,
                    period: @period, main_process: nil, sub_process: nil, indicator: nil, indicator_metric: nil,
                    index_path: supervisor_periods_path} %>


  <br>
  <%= form_for [:supervisor, @period] do |f| %>
    <%= render 'shared/errors', resource: @period %>
      <div class="small-12 medium-8 column">
        <strong>Datos de : </strong>
        <%= l @period.started_at %> a <%= l @period.ended_at %>
      </div>

      <div class="small-12 medium-8 column">
        <strong>Plazo recogida de datos abierto desde: </strong> <%= l @period.opened_at %>
      </div>

      <div class="small-12 medium-8 column  date-format">
        <%= f.label :closed_at %>
        <%= f.date_field :closed_at, label: false,
                                     placeholder: t('supervisor.periods.form.closed_at'),id: 'closed_at' %>
      </div>
      <div class="actions small-12 columns">
        <%= f.submit(class: 'button hollow', value: t("actions.save")) %>
      </div>
    </div>
  <% end %>

