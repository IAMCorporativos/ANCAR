<div class="staff">
  <% if type == 'all' %>
    <table id='<%= "staff_#{of}" %>', class="margin text-center">
      <thead>
        <tr>
          <th class="text-center" colspan="5"> <%= (t("entry_indicators.staff.title.#{process_name(@period, of)}")) %></th>
        </tr>
        <tr>
          <% OfficialGroup.all.each do |gr| %>
            <th class="text-center"><%= gr.name %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% OfficialGroup.all.each do |gr| %>
            <td>
              <% if of == "SubProcess" %>
                <%=  get_staff(of, process, gr, unit, period) %>
              <% else %>
                <strong><%=  get_staff(of, process, gr, unit, period) %></strong>
              <% end %>
            </td>
          <% end %>
        </tr>
        <% if of == "Unit" %>
          <% if input_staff_visible?(process.id) %>
            <tr>
               <th class="text-center" colspan="5">
                 <%= t("entry_indicators.staff.input.header") %>
                 ->  <a class="text-left small"  href="#" data-open="showJustification"><%= t('entry_indicators.staff.input.link') %></a>
              </th>
           </tr>
          <tr>
            <% OfficialGroup.all.each do |gr| %>
              <td>
                <%= text_field_tag("Unit[#{process.id}][#{gr.name}]", get_staff("UnitJustified", process, gr, unit, period),
                                   class: "input_staff", placeholder: gr.name) %>
              </td>
            <% end %>
          </tr>
          <div class="reveal callout <%= staff_verified_class(process.id, period.id)%> " id="showJustification" data-reveal>
            <h4> <%= t("entry_indicators.staff.justification.modal.title") %> </h4>
            <div class="lead "><%= staff_verified_text(process.id, period.id) %></div>
            <p><%= justification_text(@unit.id, @period.id) %></p>
            <button class="close-button warning" data-close aria-label="Close modal" type="button">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
         <% end %>
      <% end %>
      </tbody>
    </table>
  <% elsif type == 'header' %>
        <% OfficialGroup.all.each do |gr| %>
            <th class="text-center"><%= gr.name %></th>
        <% end %>
  <% elsif type == 'data' %>
    <% OfficialGroup.all.each do |gr| %>
      <td>
        <% if @period.open_entry? %>
          <%= text_field_tag("Indicator[#{process.id}][#{gr.name}]",
                             get_staff(of, process, gr, unit, period),
                             class: "inline group", placeholder: gr.name) %>
        <% else %>
          <%=  get_staff(of, process, gr, unit, period) %>
        <% end %>
      </td>
    <% end %>
  <% end %>
</div>