<div class="staff">
  <table id="staff_<%=of%>">
    <thead>
      <caption>  <%= (t("entry_indicators.staff.title.#{process_name(@period, of)}")) %></caption>
      <tr>
        <th class="position"> <%= (t("entry_indicators.staff.assigned.column_header")) %></th>
        <% official_groups.each do |gr| %>
            <th class="text-center"><%= gr.name %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% if of == 'Unit' %>
        <tr>
          <th class="icon-calendar"> <%= (t("entry_indicators.staff.assigned.initial")) %></th>
          <% official_groups.each do |gr| %>
              <td>  <strong><%=  format_number(display_staff(of, process, unit, period, gr.id, pos_amount(of))) %></strong>  </td>
          <% end %>
        </tr>
      <% end %>
      <tr>
        <th class="icon-user"> <%= t('entry_indicators.staff.assigned.process') %></th>
        <% official_groups.each do |gr| %>
            <td> <strong><%=  format_number(display_staff(of, process, unit, period, gr.id, pos_amount(of), 'Assigned')) %></strong>  </td>
      <% end %>
      </tr>
      <% if of == 'Unit' %>
        <% if input_staff_visible?(process.id, period.id) %>
            <%= render 'real_staff', process: unit, unit: unit, period: period %>
        <% end %>
      <% end %>
    </tbody>
  </table>

</div>