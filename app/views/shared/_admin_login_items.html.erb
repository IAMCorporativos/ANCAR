<!-- Esto de comprobar el login pero hasta que no este funcionando devise no se ponen los ifs recuperarlos luego de consul -->
<% if current_user %>
  <% if current_user.administrator? %>
    <li>
      <%= link_to t("layouts.header.administracion"), admin_root_path %>
    </li>
  <% end %>
  <% if current_user.manager? || current_user.administrator? %>
    <li>
      <%= link_to t("layouts.header.gestion"), admin_root_path %>
    </li>
  <% end %>

  <% if (current_user.valuator? || current_user.administrator?) %>
    <li>
      <%= link_to t("layouts.header.validacion"), admin_root_path %>
    </li>
  <% end %>

  <li>
    <%= link_to t("application.close"), root_path(logout: "true") %>
  </li>

<% end %>
