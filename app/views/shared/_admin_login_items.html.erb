<% if current_user %>

  <% if current_user.has_role? :admin, :any %>
    <li>
      <%= link_to t('layouts.header.administration'), admin_root_path %>
    </li>
  <% end %>

  <% if (current_user.has_role? :supervisor, :any) %>
    <li>
      <%= link_to t('layouts.header.supervision'), supervisor_root_path %>
    </li>
  <% end %>

  <li>
    <%= link_to t('application.close'), session_path, method: :DELETE %>
  </li>

<% end %>
