<div class="row">
  <%= render 'shared/back' %>
  <div class="small-12 columns">
    <div class="small-10 columns">
      <h2><%= t('admin.users.index.title') %></h2>
    </div>
  </div>
</div>

<%= render 'shared/filter_subnav', i18n_namespace: 'admin.users.index' %>

<h3><%= page_entries_info @users, :entry_name => 'usuario'%></h3>
<!--%= render 'item_list' %-->

<table class="hover">
  <thead>
    <tr>
      <th><%= t('admin.users.index.row.login') %></th>
      <th><%= t('admin.users.index.row.name') %></th>
      <th><%= t('admin.users.index.row.position') %></th>
      <th><%= t('admin.users.index.row.unit') %></th>
      <th><%= t('admin.users.index.row.organization') %></th>
      <th><%= t('admin.users.index.row.actions') %></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to user.login, edit_admin_user_path(user) %>
      </td>
      <td>
        <%= user.full_name%>
      </td>
      <td> <%= user.official_position %> </td>
      <td> <%= user.sap_den_unit %> </td>
      <td> <%= user.sap_den_organization %> </td>
      <td>
        <%= link_to("", edit_admin_user_path(user), title: 'Detalle del usuario', class: "icon-search") %>
        <%= link_to("", ws_update_admin_user_path(user), title: 'Actualizar usuario', class: "icon-edit") %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="row">
    <div class="small-12 columns">
      <%= paginate @users %>
    </div>
</div>
