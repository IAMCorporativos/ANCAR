<%= form_for [:admin, @organization_type] do |f| %>
  <%= f.label :acronym, t('admin.organization_types.description') %>
  <%= f.text_field :acronym, label: false %>
  <%= f.label :description, t('admin.organization_types.description') %>
  <%= f.text_field :description, label: false %>
  <%= f.submit t("actions.#{action_name}"), class: "button hollow" %>
<% end %>
