<div class="row">
  <%= link_to(t('actions.back'),'javascript:history.go(-1);',  class:"icon-angle-left" ) %>
  <h2> <%= t('admin.organizations.index.title') %></h2>

   <%= link_to("Crear", new_admin_organization_path, class: "button hollow") %>

  <table>
    <tr>
      <th class="text-left"> Id </th>
      <th class="text-left"> <%= t('admin.organizations.description') %> </th>
      <th class="text-left"> <%= t('admin.organizations.short_description') %> </th>
      <th class="text-left"> <%= t('admin.organizations.sap_id') %> </th>
      <th class="text-left"> <%= t('admin.organizations.organization_type') %> </th>
      <th class="text-left"> <%= t('actions.actions')%></th>
    </tr>
    <% @organizations.each do |type| %>
      <tr>
        <td><%= type.id %></td>
        <td><%= type.description %></td>
        <td><%= type.short_description %></td>
        <td><%= type.sap_id %></td>
        <td><%= type.organization_type&.description %></td>
        <td>
          <%= link_to("", edit_admin_organization_path(type), class: "icon-pencil") %>
          <%= link_to("", admin_organization_path(type), method: :delete, class: "icon-trash") %>
        </td>
      </tr>
    <% end %>
  </table>

</div>
