<%= form_for [:admin, @organization] do |f| %>
  <%= f.label   :organization_type, t('activerecord.attributes.organization.organization_type') %>
  <%= f.select  :organization_type, options_for_select(OrganizationType.select_options), label: false %>
  <%= f.label   :description, t('activerecord.attributes.organization.description') %>
  <%= f.text_field :description, label: false %>
  <%= f.label   :short_description, t('activerecord.attributes.organization.short_description') %>
  <%= f.text_field :short_description, label: false %>
  <%= f.label   :sap_id, t('activerecord.attributes.organization.sap_id') %>
  <%= f.text_field :sap_id, label: false %>
  <%= f.submit t("actions.#{action_name}"), class: "button hollow" %>
<% end %>
