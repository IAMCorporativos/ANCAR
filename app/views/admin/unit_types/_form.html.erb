<%= form_for [:admin, @unit_type] do |f| %>

  <%= f.label :organization_type, t('admin.unit_types.organization_type') %>
  <%= f.select :organization_type, options_for_select(OrganizationType.select_options), label: false %>
  <%= f.label :order, t('admin.unit_types.order') %>
  <%= f.text_field :order, label: false %>
  <%= f.label :description, t('admin.unit_types.description') %>
  <%= f.text_field :description, label: false %>
  <%= f.submit t("actions.#{action_name}"), class: "button hollow" %>
<% end %>
