<%= form_for [:admin, @unit] do |f| %>
  <%= f.label   :organization, t('admin.units.organization') %>
  <%= f.select  :organization, options_for_select(Organization.select_options), label: false %>
  <%= f.label   :unit_type, t('admin.units.unit_type') %>
  <%= f.select  :unit_type, options_for_select(UnitType.select_options), label: false %>
  <%= f.label   :description, t('admin.units.description') %>
  <%= f.text_field :description_sap, label: false %>
  <%= f.label   :sap_id, t('admin.units.sapid') %>
  <%= f.text_field :sap_id, label: false %>
  <%= f.submit t("actions.#{action_name}"), class: "button hollow" %>
<% end %>
