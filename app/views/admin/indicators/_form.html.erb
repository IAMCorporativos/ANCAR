<%= form_for [:admin, @indicator] do |f| %>
  <%= render 'admin/shared/errors', resource: @indicator %>
  <div class="row">
    <%= f.hidden_field :task_id, value: @indicator.task_id ,label: false%>
    <div class="medium-12 small-12 columns">
      <div class="medium-6 small-6 columns">
        <b>Indicador</b> <%= f.select :item_id, options_for_select(indicator_items, @indicator.item_id), label: false %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="medium-12 small-12 columns">
      <div class="medium-4 small-4 columns">
        <b>MÃ©trica</b> <%= f.select :metric_id, options_for_select(metric_items, @indicator.metric.item_id), label: false, class: "input-metric" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="medium-4 smal-4 columns">
      <div class="medium-3 small-3 columns">
        <b>Orden</b> <%= f.text_field :order, label: false %>
      </div>
    </div>
    <div class="medium-4 small-4 columns end" >
      <div class="medium-12 small-12 columns">
        <%= f.check_box :total_process, title: t("admin.indicators.form.total_process?"), label: false %>
        <%= t("admin.indicators.form.total_process?") %>
      </div>
      <div class="medium-12 small-12 columns">
        <%= f.check_box :total_sub_process,     title: t("admin.indicators.form.total_sub_process?"), label: false %>
        <%= t("admin.indicators.form.total_sub_process?") %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="medium-12 small-12">

    </div>
  </div>
  <div class="row">
    <div class="actions medium-12 small-12 column">
      <%= f.submit(class: "button", value: t("admin.actions.#{action_name}")) %>
    </div>
  </div>
<% end %>
