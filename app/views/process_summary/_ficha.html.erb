<% @main_processes.each do |mp| %>
  <div id = "js-summary-process_s"
        data = "js-summary-process" data-js-url= <%=process_summary_index_path%>,
        data-js-id: <%="#{mp.id}"%>, data-js-process-type: <%="#{mp.class.name}" %>>

    <div class="ficha">
      <div class="row">
        <div class="medium-12 small-12 columns" >
          <div class=" medium-1 short-1 columns">       </div>
          <div class="main_process medium-10 short-10 columns">
            <h5> <%= mp.order %> <%= mp.item.description %> </h5>
           <% if mp.id == @mp_id.to_i %>
             <%= link_to "Ocultar subprocesos", process_summary_index_path(type: 'SubProcess') if @type == "SubProcess" %>
           <% else %>
             <%= link_to "Ver subprocesos", process_summary_index_path(type: 'SubProcess', id: mp.id) if @type == "SubProcess" %>
           <% end %>
          </div>
          <div class="medium-1 short-1 columns"> </div>
        </div>
      </div>
    <% if @type == "SubProcess" %>
      <% if mp.id == @mp_id.to_i %>
        <% @sub_processes.each do |sp| %>
          <div class="row">
            <div class="medium-12 small-12 columns" >
              <div class=" medium-1 short-1 columns">       </div>
              <div class="main_process medium-10 short-10 columns">
                <h5> <%= sp.order %> <%= sp.item.description %> </h5>
              </div>
              <div class="medium-1 short-1 columns">       </div>
            </div>
          </div>
          <%= render partial: 'detail', locals: {pid: sp.id} %>
        <% end %>
      <% end %>
    <% else %>
     <%= render partial: 'detail', locals: {pid: mp.id}  %>
    <% end %>
  </div>

<% end %>
