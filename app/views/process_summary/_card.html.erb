<% @main_processes.each do |mp| %>
  <div class="card">
    <div class="main_process small-12">
      <h5><%= mp.order %>  <%= mp.item.description %></h5>
      <% if mp.id == @mp_id.to_i %>
       <%= link_to "Ocultar subprocesos",
                    process_summary_index_path(type: 'SubProcess') if @type == "SubProcess" %>
      <% else %>
        <%= link_to "Ver subprocesos",
                    process_summary_index_path(type: 'SubProcess', id: mp.id) if @type == "SubProcess" %>
      <% end %>
    </div>

    <% if @type == "SubProcess" %>
    <ul class="accordion" data-multi-expand="true" data-allow-all-closed="true" data-accordion>
      <% if mp.id == @mp_id.to_i %>
        <% @sub_processes.each do |sp| %>
          <li class="accordion-item small-12" data-accordion-item>
            <a href="#" class="accordion-title" >
              <h5><%= sp.order %> <%= sp.item.description %></h5>
            </a>
          <div class="card-content accordion-content" data-tab-content>
            <%= render partial: 'detail', locals: {pid: sp.id} %>
          </div>
          </li>
        <% end %>
      <% end %>
    <% else %>
      <div class="card-content">
        <%= render partial: 'detail', locals: {pid: mp.id}  %>
      </div>
    <% end %>
  </ul>
  </div>
<% end %>
